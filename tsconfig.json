{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "inlineSources": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "*": ["node_modules/*"]
    },
    "removeComments": true,
    "rootDir": "src",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "esnext"
  },
  "include": ["src/**/*.ts"]
}
